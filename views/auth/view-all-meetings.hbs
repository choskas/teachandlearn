<div class="jumbotron"
  style="background-image: url(https://i.ibb.co/jTwN52C/blond-hair-chairs-coffee-2041627.jpg); background-size: 100%;">
  <div class="group-header-text">
    <h1 class="display-4">Sesiones</h1>
    <p class="lead">¿Listo para aprender? </p>

    <p class="groups-description">Unete a una de nuestras sesiones</p>
    <a class="btn btn-primary btn-lg" href="/news" role="button">Regresar</a>
  </div>
</div>


<div class="col-md-10 offset-md-2">

  <div class="container">

    {{#each meetings}}

    <div class="card" style="width: 18rem;" id="meeting-card">
      <img src="{{this.img}}" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">{{this.description}}
        </p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">{{this.teacher}}</li>
        <li class="list-group-item">{{this.date}}</li>
        <li class="list-group-item">{{this.address}}</li>
      </ul>
      <div class="card-body">
        <form action="{{this._id}}/meetingregister" method="POST" enctype="multipart/form-data">
    <input type="submit" value="Unirse a Sesión">
    </form>
      </div>
    </div>


    {{/each}}

  </div>

</div>



